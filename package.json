{
  "name": "unique-classnames",
  "version": "1.1.0",
  "description": "A simple utility for conditionally joining classNames together, all classNames won't be duplicated.",
  "main": "lib/index.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "start": "webpack --progress --watch --config config/webpack.dev.js",
    "build": "webpack --progress --config config/webpack.prod.js",
    "test": "node test",
    "docs": "typedoc",
    "clean:docs": "rm -rf docs",
    "clean": "rm -rf lib && rm -rf types",
    "prepare": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/poplark/unique-classnames.git"
  },
  "files": [
    "lib",
    "types",
    "docs",
    "README.md",
    "README-zh_CN.md"
  ],
  "keywords": [
    "css",
    "classes",
    "classname",
    "classnames",
    "unique",
    "util",
    "utility",
    "react"
  ],
  "author": {
    "name": "poplark",
    "email": "songkang666@126.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poplark/unique-classnames/issues"
  },
  "homepage": "https://poplark.github.io/unique-classnames/",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-loader": "^8.0.4",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-merge": "^5.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "typedoc",
      "git add docs"
    ]
  }
}
